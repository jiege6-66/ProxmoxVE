{
  "name": "Valkey",
  "slug": "valkey",
  "categories": [
    8
  ],
  "date_created": "2025-11-29",
  "type": "ct",
  "updateable": true,
  "privileged": false,
  "interface_port": 6379,
  "documentation": "https://valkey.io/docs/",
  "config_path": "/etc/valkey/valkey.conf",
  "website": "https://valkey.io/",
  "logo": "https://cdn.jsdelivr.net/gh/selfhst/icons@main/webp/valkey.webp",
  "description": "Valkey 是一个开源(BSD)的高性能键值数据存储，支持多种工作负载，如缓存、消息队列，并可作为主数据库。该项目由 Linux 基金会支持，确保它将永远保持开源。",
  "install_methods": [
    {
      "type": "default",
      "script": "ct/valkey.sh",
      "resources": {
        "cpu": 1,
        "ram": 1024,
        "hdd": 4,
        "os": "Debian",
        "version": "13"
      }
    },
    {
      "type": "alpine",
      "script": "ct/alpine-valkey.sh",
      "resources": {
        "cpu": 1,
        "ram": 256,
        "hdd": 1,
        "os": "alpine",
        "version": "3.23"
      }
    }
  ],
  "default_credentials": {
    "username": null,
    "password": null
  },
  "notes": [
    {
      "text": "Show Login Credentials, type `cat ~/valkey.creds` in the LXC console",
      "type": "info"
    },
    {
      "text": "Alpines Valkey package is compiled without TLS support. For TLS, use the Debian-based valkey script instead.",
      "type": "info"
    }
  ]
}
