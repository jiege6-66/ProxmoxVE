{
  "name": "Rclone",
  "slug": "rclone",
  "categories": [
    11
  ],
  "date_created": "2025-05-15",
  "type": "ct",
  "updateable": true,
  "privileged": false,
  "interface_port": 3000,
  "documentation": "https://rclone.org/docs/",
  "website": "https://rclone.org/",
  "logo": "https://cdn.jsdelivr.net/gh/selfhst/icons@main/webp/rclone.webp",
  "config_path": "~/.config/rclone/rclone.conf",
  "description": "Rclone 是一个用于管理云存储文件的命令行程序。它是云服务商网页存储界面的功能丰富的替代方案",
  "install_methods": [
    {
      "type": "default",
      "script": "ct/rclone.sh",
      "resources": {
        "cpu": 1,
        "ram": 512,
        "hdd": 2,
        "os": "debian",
        "version": "13"
      }
    },
    {
      "type": "alpine",
      "script": "ct/alpine-rclone.sh",
      "resources": {
        "cpu": 1,
        "ram": 256,
        "hdd": 1,
        "os": "alpine",
        "version": "3.23"
      }
    }
  ],
  "default_credentials": {
    "username": null,
    "password": null
  },
  "notes": [
    {
      "type": "info",
      "text": "`cat ~/rclone.creds` to view login credentials"
    },
    {
      "type": "info",
      "text": "`htpasswd -b -B /opt/login.pwd newuser newuserpassword` to add more users."
    }
  ]
}
