        "cpu": 1,
        "ram": 512,
        "hdd": 3,
        "os": "alpine",
        "version": "3.23"
      }
    },
    {
      "type": "alpine",
      "script": "ct/npmplus.sh",
      "resources": {
        "cpu": 1,
        "ram": 512,
        "hdd": 3,
        "os": "alpine",
        "version": "3.23"
      }
    }
